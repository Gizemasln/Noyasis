@section Script {
    <script>
        function duzenleGetir(id) {
            fetch('@Url.Action("Getir", "AdminIletisimBilgileri")' + '?id=' + id)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    document.getElementById('editId').value = data.id;
                    document.getElementById('editAdi').value = data.adi || '';
                    document.getElementById('editAdres').value = data.adres || '';
                    document.getElementById('editBankaAdi').value = data.bankaAdi || '';
                    document.getElementById('editEmail1').value = data.email1 || '';
                    document.getElementById('editEmail2').value = data.email2 || '';
                    document.getElementById('editFacebook').value = data.facebook || '';
                    document.getElementById('editFaks').value = data.faks || '';
                    document.getElementById('editGoogleMapsBaglanti').value = data.googleMapsBaglanti || '';
                    document.getElementById('editIbanNo').value = data.ibanNo || '';
                    document.getElementById('editInstagram').value = data.instagram || '';
                    document.getElementById('editLinkedin').value = data.linkedin || '';
                    document.getElementById('editTelefon1').value = data.telefon1 || '';
                    document.getElementById('editTelefon2').value = data.telefon2 || '';
                    document.getElementById('editTelefon3').value = data.telefon3 || '';
                    document.getElementById('editTelefon4').value = data.telefon4 || '';
                    document.getElementById('editTwitter').value = data.twitter || '';
                    document.getElementById('editWhatsApp').value = data.whatsApp || '';
                    document.getElementById('editYouTube').value = data.youTube || '';

                    var duzenleModal = new bootstrap.Modal(document.getElementById('duzenleModal'));
                    duzenleModal.show();
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Kayıt getirilirken bir hata oluştu.');
                });
        }

        function silOnay(id, adi) {
            document.getElementById('silId').value = id;
            document.getElementById('silAdi').textContent = adi;

            var silModal = new bootstrap.Modal(document.getElementById('silModal'));
            silModal.show();
        }

        // Modal kapandığında formları temizle
        document.getElementById('ekleModal').addEventListener('hidden.bs.modal', function () {
            this.querySelector('form').reset();
        });
        document.getElementById('duzenleModal').addEventListener('hidden.bs.modal', function () {
            this.querySelector('form').reset();
        });

        // Başarı mesajlarını 5 saniye sonra otomatik kapat
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}