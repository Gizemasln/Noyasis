    <section id="faq" class="faq section">

        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>S.S.S</h2>
            <p>Sıkça Sorulan Sorular</p>
        </div><!-- End Section Title -->

        <div class="container">

            <div class="row">

                @{
                    var sssList = ViewBag.SSSList as List<SSS> ?? new List<SSS>();
                    var firstHalf = sssList.Take((int)Math.Ceiling(sssList.Count / 2.0)).ToList();
                    var secondHalf = sssList.Skip((int)Math.Ceiling(sssList.Count / 2.0)).ToList();
                    var isFirst = true;
                }

                @if (sssList.Any())
                {
                    <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="faq-container">
                            @foreach (var item in firstHalf)
                            {
                                <div class="faq-item @(isFirst ? "faq-active" : "")">
                                    <h3>@item.Soru</h3>
                                    <div class="faq-content">
                                        <p>@item.Cevap</p>
                                    </div>
                                    <i class="faq-toggle bi bi-chevron-right"></i>
                                </div>

                                <!-- End Faq item-->
                                isFirst = false;
                            }
                        </div>
                    </div>

                    <!-- End Faq Column-->

                    <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                        <div class="faq-container">
                            @foreach (var item in secondHalf)
                            {
                                <div class="faq-item">
                                    <h3>@item.Soru</h3>
                                    <div class="faq-content">
                                        <p>@item.Cevap</p>
                                    </div>
                                    <i class="faq-toggle bi bi-chevron-right"></i>
                                </div>

                                <!-- End Faq item-->
                            }
                        </div>
                    </div>

                    <!-- End Faq Column-->
                }
                else
                {
                    <div class="col-12 text-center">
                        <p>Henüz SSS eklenmemiş.</p>
                    </div>
                }

            </div>

        </div>

    </section>    <!-- Portfolio Section -->
    <section id="portfolio" class="portfolio section">

        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Ürünlerimiz</h2>
            <p>Ürün Görselleri</p>
        </div><!-- End Section Title -->

        <div class="container">

            <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

                <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                    <li data-filter="*" class="filter-active">Tümü</li>
                    @foreach (var kategori in ViewBag.Kategoriler)
                    {
                        <li data-filter=".filter-@kategori.Id">@kategori.Adi</li>
                    }
                </ul><!-- End Portfolio Filters -->

                <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">

                    @foreach (var urun in ViewBag.Urunler)
                    {
                        @foreach (var galeri in urun.UrunGaleri ?? new List<UrunGaleri>())
                        {
                            if (galeri.Durumu == 1) // Yalnızca aktif görseller
                            {
                                <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-@urun.KategoriId">
                                    <div class="portfolio-content h-100">
                                        <img src="@galeri.FotografBuyuk" class="img-fluid" alt="@urun.Adi">
                                        <div class="portfolio-info">
                                            <a href="@galeri.FotografBuyuk" title="@urun.Adi" data-gallery="portfolio-gallery-@urun.KategoriId" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                                            <a href="/Urun/Detay/@urun.Id" title="More Details" class="details-link"><i class="bi bi-link-45deg"></i></a>
                                        </div>
                                    </div>
                                </div>

                                <!-- End Portfolio Item -->
                            }
                        }
                    }

                </div><!-- End Portfolio Container -->

            </div>

        </div>

