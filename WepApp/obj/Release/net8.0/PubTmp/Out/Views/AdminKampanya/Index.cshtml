@model dynamic
@using WepApp.Models
@{
    ViewData["Title"] = "Kampanya Yönetimi";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}

<style>
    .table-actions {
        white-space: nowrap;
        width: 150px;
    }

    .card {
        margin-top: 70px;
    }

    .summary-info {
        background: #f8f9fa;
        border-radius: 0.35rem;
        padding: 15px;
        margin-top: 15px;
    }

    .summary-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
        font-size: 0.9rem;
    }

    .paket-table tbody tr {
        height: 52px;
    }

    .paket-table th, .paket-table td {
        vertical-align: middle;
    }

    .paket-table .form-check {
        margin: 0;
        padding-left: 2.5rem;
    }

    .paket-table .form-check-input {
        margin-left: -2rem;
    }

    .paket-table small {
        font-size: 0.8rem;
    }

    .single-table-container {
        max-height: 500px;
        overflow-y: auto;
        border: 1px solid #e3e6f0;
        border-radius: 0.35rem;
        margin-top: 10px;
    }

    .tur-badge {
        font-size: 0.7rem;
        padding: 0.25em 0.6em;
    }
</style>

<div class="row">
    <div class="col-md-12">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card" style="margin-top: 70px;">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Kampanyalar</span>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ekleModal">
                    <i class="fas fa-plus"></i> Yeni Kampanya Ekle
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th width="50">#</th>
                                <th>Başlık</th>
                                <th>Metin</th>
                                <th>İndirim %</th>
                                <th>Başlangıç</th>
                                <th>Bitiş</th>
                                <th>İçerik</th>
                                <th width="150" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Kampanyalar != null && ViewBag.Kampanyalar.Count > 0)
                            {
                                var counter = 1;
                                foreach (var k in ViewBag.Kampanyalar)
                                {
                                    <tr>
                                        <td>@counter</td>
                                        <td>@k.Baslik</td>
                                        <td>@k.Metin</td>
                                        <td>%@k.IndirimYuzdesi</td>
                                        <td>@k.BaslangicTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@k.BitisTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-success me-1" onclick="paketleriGoster(@k.Id)" title="Sadece Paketler">
                                                <i class="fas fa-box"></i> Paketler
                                            </button>
                                            <button class="btn btn-sm btn-outline-primary" onclick="gruplariGoster(@k.Id)" title="Sadece Paket Grupları">
                                                <i class="fas fa-layer-group"></i> Gruplar
                                            </button>
                                        </td>
                                        <td class="table-actions text-center">
                                            <button type="button" class="btn btn-warning btn-sm" onclick="duzenleGetir(@k.Id)">
                                                <i class="fas fa-edit"></i> 
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm" onclick="silOnay(@k.Id, '@k.Baslik')">
                                                <i class="fas fa-trash"></i> 
                                            </button>
                                        </td>
                                    </tr>
                                    counter++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center py-5">
                                        <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">Henüz kampanya eklenmemiş.</p>
                                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ekleModal">Yeni Kampanya Ekle</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- EKLE MODAL -->
<div class="modal fade" id="ekleModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <form method="post" action="@Url.Action("Ekle")" id="ekleForm">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Yeni Kampanya Ekle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-3 mb-3"><label class="form-label">Başlık</label><input type="text" name="Baslik" class="form-control" required /></div>
                        <div class="col-md-3 mb-3"><label class="form-label">İndirim Yüzdesi</label><input type="number" step="0.01" name="IndirimYuzdesi" class="form-control" min="0" max="100" required /></div>
                        <div class="col-md-3 mb-3"><label class="form-label">Başlangıç Tarihi</label><input type="datetime-local" name="BaslangicTarihi" class="form-control" required /></div>
                        <div class="col-md-3 mb-3"><label class="form-label">Bitiş Tarihi</label><input type="datetime-local" name="BitisTarihi" class="form-control" required /></div>
                        <div class="col-md-12 mb-3"><label class="form-label">Metin (isteğe bağlı)</label><input type="text" name="Metin" class="form-control" /></div>
                    </div>
                    <hr>
                    <h6 class="border-bottom pb-2">Kampanya İçeriği</h6>
                    <p class="text-muted">Kampanyaya dahil edilecek modül ve paketleri aşağıdan seçin.</p>
                    <div class="mb-3">
                        <input type="text" id="genelArama" class="form-control" placeholder="Modül veya paket ara...">
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="selectAllTumu">
                        <label class="form-check-label fw-bold" for="selectAllTumu">Tümünü Seç</label>
                    </div>
                    <div class="single-table-container">
                        <table class="table table-sm table-hover paket-table">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th width="50">Seç</th>
                                    <th width="80">Tür</th>
                                    <th>Adı</th>
                                    <th>Detay</th>
                                    <th width="120" class="text-end">Liste Fiyatı</th>
                                </tr>
                            </thead>
                            <tbody id="birlesikListe">
                                <!-- GRUPLAR ÖNCE -->
                                @foreach (var grup in ViewBag.PaketGruplari ?? new List<dynamic>())
                                {
                                    <tr data-tur="grup">
                                        <td>
                                            <div class="form-check">
                                                <input class="form-check-input birlesik-checkbox" type="checkbox" name="seciliPaketGruplari" value="@grup.Id">
                                                <label class="form-check-label"></label>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-primary tur-badge">PAKET</span></td>
                                        <td><strong>@grup.Adi</strong></td>
                                        <td><small class="text-muted">@grup.LisansTip?.Adi</small></td>
                                        <td class="text-end text-success fw-bold">@grup.Fiyat.ToString("N2") ₺</td>
                                    </tr>
                                }
                                <!-- PAKETLER SONRA -->
                                @foreach (var paket in ViewBag.Paketler ?? new List<dynamic>())
                                {
                                    <tr data-tur="paket">
                                        <td>
                                            <div class="form-check">
                                                <input class="form-check-input birlesik-checkbox" type="checkbox" name="seciliPaketler" value="@paket.Id">
                                                <label class="form-check-label"></label>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-info tur-badge">MODÜL</span></td>
                                        <td><strong>@paket.Adi</strong></td>
                                        <td><small class="text-muted">@paket.LisansTip?.Adi • @paket.Birim?.Adi • @paket.EgitimSuresi gün</small></td>
                                        <td class="text-end text-success fw-bold">@paket.Fiyat.ToString("N2") ₺</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="summary-info mt-3">
                        <div class="summary-item"><span>Seçili Modül:</span> <strong id="seciliPaketSayisi">0</strong></div>
                        <div class="summary-item"><span>Seçili Paket :</span> <strong id="seciliPaketGrupSayisi">0</strong></div>
                        <div class="summary-item"><span>Toplam İçerik:</span> <strong id="toplamIcerikSayisi" class="text-success">0</strong></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- DÜZENLE MODAL -->
