@using WepApp.Models
@{
    ViewData["Title"] = "Paket Bağlantı Detayları";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}

@{
    var paket = ViewBag.Paket as Paket;
    var bagliPaketler = ViewBag.BagliPaketler as List<Paket> ?? new List<Paket>();
    var anaPaketler = ViewBag.AnaPaketler as List<Paket> ?? new List<Paket>();
    var tumBagliPaketler = ViewBag.TumBagliPaketler as List<Paket> ?? new List<Paket>();
    var tumBagliPaketSayisi = ViewBag.TumBagliPaketSayisi as int? ?? 0;
}

<style>
    .detay-container {
        margin-top: 70px;
    }

    .paket-header {
        background: linear-gradient(135deg, #3498db 0%, #2c3e50 100%);
        color: white;
        padding: 25px;
        border-radius: 10px;
        margin-bottom: 30px;
        position: relative;
        overflow: hidden;
    }

    .paket-baslik {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .baglanti-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .baglanti-panel {
        background: white;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        overflow: hidden;
    }

    .panel-baslik {
        background: #f8f9fa;
        padding: 15px;
        border-bottom: 1px solid #dee2e6;
        font-weight: bold;
        color: #495057;
    }

    .panel-icerik {
        padding: 15px;
        max-height: 400px;
        overflow-y: auto;
    }

    .baglanti-item {
        padding: 10px 15px;
        border: 1px solid #e9ecef;
        border-radius: 6px;
        margin-bottom: 10px;
        background: #f8f9fa;
        transition: all 0.2s ease;
    }

        .baglanti-item:hover {
            background: #e9ecef;
            border-color: #dee2e6;
            transform: translateX(3px);
        }

    .baglanti-adi {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .baglanti-detay {
        font-size: 0.85rem;
        color: #7f8c8d;
    }

    .zincir-baglanti {
        border-left: 4px solid #2ecc71;
    }

    .direkt-baglanti {
        border-left: 4px solid #3498db;
    }

    .ana-baglanti {
        border-left: 4px solid #e74c3c;
    }

    .istatistikler {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 30px;
    }

    .istatistik-kart {
        background: white;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        transition: all 0.3s ease;
    }

        .istatistik-kart:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

    .istatistik-deger {
        font-size: 2rem;
        font-weight: bold;
        color: #3498db;
        margin-bottom: 5px;
    }

    .istatistik-label {
        color: #7f8c8d;
        font-size: 0.9rem;
    }

    .aksiyonlar {
        margin-top: 30px;
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .bos-liste {
        text-align: center;
        padding: 40px 20px;
        color: #95a5a6;
    }

    .seviye-badge {
        display: inline-block;
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 0.75rem;
        margin-left: 5px;
    }

    .seviye-1 {
        background: #2ecc71;
        color: white;
    }

    .seviye-2 {
        background: #3498db;
        color: white;
    }

    .seviye-3 {
        background: #9b59b6;
        color: white;
    }

    .seviye-4 {
        background: #e67e22;
        color: white;
    }

    .seviye-5 {
        background: #e74c3c;
        color: white;
    }
</style>

<div class="detay-container">
    <div class="row">
        <div class="col-md-12">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Paket Başlığı -->
            <div class="paket-header">
                <div class="paket-baslik">@paket.Adi - Bağlantı Ağı</div>
                <div class="paket-detay">
                    <strong>Kod:</strong> @(paket.ModulKodu ?? "-") |
                    <strong>Toplam Bağlantı:</strong> @tumBagliPaketSayisi
                </div>
            </div>

            <!-- İstatistikler -->
            <div class="istatistikler">
                <div class="istatistik-kart">
                    <div class="istatistik-deger">@bagliPaketler.Count</div>
                    <div class="istatistik-label">Doğrudan Bağlı Paket</div>
                </div>
                <div class="istatistik-kart">
                    <div class="istatistik-deger">@anaPaketler.Count</div>
                    <div class="istatistik-label">Ana Paket (Bu Pakete Bağlı)</div>
                </div>
                <div class="istatistik-kart">
                    <div class="istatistik-deger">@tumBagliPaketler.Count</div>
                    <div class="istatistik-label">Toplam Bağlı Paket (Zincir)</div>
                </div>
            </div>

            <!-- Bağlantı Grid -->
            <div class="baglanti-grid">
                <!-- Doğrudan Bağlı Paketler -->
                <div class="baglanti-panel">
                    <div class="panel-baslik">
                        <i class="fas fa-arrow-right me-2"></i>Doğrudan Bağlı Paketler
                    </div>
                    <div class="panel-icerik">
                        @if (bagliPaketler.Any())
                        {
                            foreach (var p in bagliPaketler)
                            {
                                <div class="baglanti-item direkt-baglanti">
                                    <div class="baglanti-adi">@p.Adi</div>
                                    <div class="baglanti-detay">
                                        @(p.LisansTip?.Adi ?? "-") | @p.Fiyat?.ToString("C") | @(p.EgitimSuresi?.ToString() ?? "-") gün
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="bos-liste">
                                <i class="fas fa-unlink fa-2x"></i>
                                <p>Doğrudan bağlı paket bulunmuyor</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Ana Paketler -->
                <div class="baglanti-panel">
                    <div class="panel-baslik">
                        <i class="fas fa-arrow-left me-2"></i>Ana Paketler (Bu Pakete Bağlı)
                    </div>
                    <div class="panel-icerik">
                        @if (anaPaketler.Any())
                        {
                            foreach (var p in anaPaketler)
                            {
                                <div class="baglanti-item ana-baglanti">
                                    <div class="baglanti-adi">@p.Adi</div>
                                    <div class="baglanti-detay">
                                        @(p.LisansTip?.Adi ?? "-") | @p.Fiyat?.ToString("C")
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="bos-liste">
                                <i class="fas fa-unlink fa-2x"></i>
                                <p>Ana paket bulunmuyor</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Zincirleme Bağlı Paketler -->
                <div class="baglanti-panel">
                    <div class="panel-baslik">
                        <i class="fas fa-sitemap me-2"></i>Zincirleme Bağlı Paketler
                    </div>
                    <div class="panel-icerik" id="zincirPaketler">
                        @if (tumBagliPaketler.Any())
                        {
                            <div class="text-center mb-3">
                                <button type="button" class="btn btn-sm btn-info" onclick="zincirPaketleriYukle()">
                                    <i class="fas fa-sync-alt"></i> Zincir Paketlerini Yükle
                                </button>
                            </div>
                            <div id="zincirListesi">
                                <!-- AJAX ile yüklenecek -->
                            </div>
                        }
                        else
                        {
                            <div class="bos-liste">
                                <i class="fas fa-project-diagram fa-2x"></i>
                                <p>Zincirleme bağlı paket bulunmuyor</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Aksiyonlar -->
            <div class="aksiyonlar">
                <a href="/AdminPaketBaglama" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
                <a href="/AdminPaketBaglama/Baglama/@paket.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Bağlamaları Düzenle
                </a>
                <button type="button" class="btn btn-info" onclick="bagliPaketleriGetir()">
                    <i class="fas fa-download"></i> Bağlı Paketleri JSON İndir
                </button>
            </div>
        </div>
    </div>
</div>

@section Script {
    <script>
        // Zincir paketlerini yükle
        function zincirPaketleriYukle() {
            $.get('/AdminPaketBaglama/TumBagliPaketleriGetir?paketId=@paket.Id', function(response) {
                if (response.success && response.data.length > 0) {
                    let html = '';
                    response.data.forEach(function(paket) {
                        const seviyeBadge = paket.seviye > 0 ?
                            `<span class="seviye-badge seviye-${Math.min(paket.seviye, 5)}">Seviye ${paket.seviye}</span>` : '';

                        html += `
                            <div class="baglanti-item zincir-baglanti">
                                <div class="baglanti-adi">${paket.adi} ${seviyeBadge}</div>
                                <div class="baglanti-detay">
                                    ${paket.lisansTipi || '-'} | ${paket.fiyat} ₺ | ${paket.egitimSuresi || '-'} gün
                                </div>
                            </div>
                        `;
                    });
                    $('#zincirListesi').html(html);
                } else {
                    $('#zincirListesi').html('<div class="bos-liste"><p>Zincir paketi bulunamadı</p></div>');
                }
            }).fail(function() {
                alert('Zincir paketleri yüklenirken hata oluştu.');
            });
        }

        // Bağlı paketleri JSON olarak indir
        function bagliPaketleriGetir() {
            const paketId = @paket.Id; // Bu satır Razor syntax ile çalışacak
            $.get('/AdminPaketBaglama/BagliPaketleriGetir?paketId=' + paketId, function(response) {
                if (response.success) {
                    const dataStr = JSON.stringify(response.data, null, 2);
                    const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);

                    // Düzeltilmiş dosya adı - Razor syntax'ı string içinde kullanmayın
                    const exportFileDefaultName = 'paket_baglantilari_' + paketId + '.json';
                    const linkElement = document.createElement('a');
                    linkElement.setAttribute('href', dataUri);
                    linkElement.setAttribute('download', exportFileDefaultName);
                    linkElement.click();
                } else {
                    alert('Veri alınırken hata oluştu.');
                }
            });
        }

        // Sayfa yüklendiğinde
        $(function() {
            // Alert'leri otomatik kapat
            setTimeout(() => {
                $('.alert').fadeOut();
            }, 5000);
        });
    </script>
}