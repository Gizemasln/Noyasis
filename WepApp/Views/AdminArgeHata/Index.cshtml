@section Script {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
            let seciliBildirimId = null;
            let secilenDurumId = null;
            let secilenDurumAdi = null;

            // Arama fonksiyonu
            $('#bildirimArama').on('input', function () {
                const term = $(this).val().toLowerCase().trim();
                $('#bildirimTablosu tr').each(function () {
                    const $row = $(this);
                    if ($row.find('.empty-state').length > 0) return;

                    const text = $row.text().toLowerCase();
                    $row.toggle(text.includes(term));
                });
            });

            // Durum değiştirme
            $(document).on('change', '.durum-select', async function () {
                const $select = $(this);
                const bildirimId = $select.data('bildirim-id');
                const yeniDurumId = parseInt($select.val());
                const eskiDurumId = parseInt($select.data('current-durum'));

                if (yeniDurumId === eskiDurumId) {
                    return;
                }

                try {
                    const response = await $.ajax({
                        url: '/AdminArgeHata/DurumGuncelle',
                        type: 'POST',
                        data: {
                            id: bildirimId,
                            durumId: yeniDurumId
                        },
                        dataType: 'json'
                    });

                    if (response.success) {
                        $select.data('current-durum', yeniDurumId);

                        // Durum adını güncelle
                        const durumAdi = $select.find('option:selected').data('durum-adi') || response.durumAdi;
                        $select.attr('title', durumAdi);

                        // Satır rengini güncelle
                        const $row = $select.closest('tr');

                        // Tüm satır sınıflarını temizle
                        $row.removeClass('satir-yeni satir-degerlendirmede satir-onaylandi satir-uygulandi satir-reddedildi satir-ertelendi satir-tamamlandi');
                        $select.removeClass('durum-yeni durum-degerlendirmede durum-onaylandi durum-uygulandi durum-reddedildi durum-ertelendi durum-tamamlandi');

                        // Yeni sınıfları belirle
                        const satirCssMap = {
                            1: 'satir-yeni',
                            2: 'satir-degerlendirmede',
                            3: 'satir-onaylandi',
                            4: 'satir-uygulandi',
                            5: 'satir-reddedildi',
                            6: 'satir-ertelendi',
                            7: 'satir-tamamlandi'
                        };

                        const durumCssMap = {
                            1: 'durum-yeni',
                            2: 'durum-degerlendirmede',
                            3: 'durum-onaylandi',
                            4: 'durum-uygulandi',
                            5: 'durum-reddedildi',
                            6: 'durum-ertelendi',
                            7: 'durum-tamamlandi'
                        };

                        const yeniSatirCss = satirCssMap[yeniDurumId] || '';
                        const yeniDurumCss = durumCssMap[yeniDurumId] || '';

                        if (yeniSatirCss) $row.addClass(yeniSatirCss);
                        if (yeniDurumCss) $select.addClass(yeniDurumCss);

                        toastr.success(response.message || 'Durum başarıyla güncellendi.');
                    } else {
                        toastr.error(response.message || 'Durum güncellenemedi.');
                        $select.val(eskiDurumId);
                    }
                } catch (err) {
                    console.error('Hata:', err);
                    toastr.error('Sunucu ile bağlantı kurulamadı.');
                    $select.val(eskiDurumId);
                }
            });

            // Cevap yaz butonu
            $(document).on('click', '.cevap-yaz', function() {
                const bildirimId = $(this).data('bildirim-id');
                $('#cevapModalBaslik').text('Cevap Yaz');
                $('#cevapMetni').val('');
                $('#cevapKaydetBtn').data('islem', 'yeni').data('bildirim-id', bildirimId);

                const cevapModal = new bootstrap.Modal(document.getElementById('cevapYazModal'));
                cevapModal.show();

                setTimeout(() => {
                    $('#cevapMetni').focus();
                }, 500);
            });

            // Cevap düzenle butonu
            $(document).on('click', '.cevap-duzenle', async function() {
                const bildirimId = $(this).data('bildirim-id');

                // Önce cevap bilgilerini getir
                try {
                    const response = await $.ajax({
                        url: '/AdminArgeHata/GetirCevap',
                        type: 'GET',
                        data: { id: bildirimId },
                        dataType: 'json'
                    });

                    if (response.success) {
                        if (response.duzenleyebilir) {
                            $('#cevapModalBaslik').text('Cevap Düzenle');
                            $('#cevapMetni').val(response.distributorCevap || '');
                            $('#cevapKaydetBtn').data('islem', 'guncelle').data('bildirim-id', bildirimId);

                            const cevapModal = new bootstrap.Modal(document.getElementById('cevapYazModal'));
                            cevapModal.show();

                            setTimeout(() => {
                                $('#cevapMetni').focus();
                            }, 500);
                        } else {
                            toastr.warning('Bu cevabı düzenleme yetkiniz bulunmuyor.');
                        }
                    } else {
                        toastr.error(response.message || 'Cevap bilgileri alınamadı.');
                    }
                } catch (err) {
                    console.error('Hata:', err);
                    toastr.error('Sunucu ile bağlantı kurulamadı.');
                }
            });

            // Cevap görüntüle butonu
            $(document).on('click', '.cevap-goruntule', async function() {
                const bildirimId = $(this).data('bildirim-id');

                try {
                    const response = await $.ajax({
                        url: '/AdminArgeHata/GetirCevap',
                        type: 'GET',
                        data: { id: bildirimId },
                        dataType: 'json'
                    });

                    if (response.success && response.distributorCevap) {
                        const modalContent = `
                            <div class="modal-header bg-info text-white">
                                <h5 class="modal-title">
                                    <i class="fas fa-comment-dots me-2"></i>
                                    Cevap Detayları
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Cevap Veren:</label>
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge ${response.cevapVerenTip === 'Admin' ? 'badge-admin' : 'badge-bayi'} me-2">
                                            <i class="fas fa-user me-1"></i>${response.cevapVerenTip}
                                        </span>
                                        <span>${response.cevapVerenAdi || ''}</span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Cevap Tarihi:</label>
                                    <div>${response.distributorCevapTarihi || ''}</div>
                                </div>
                                <div>
                                    <label class="form-label fw-bold">Cevap İçeriği:</label>
                                    <div class="border rounded p-3 bg-light" style="white-space: pre-line; min-height: 150px; max-height: 400px; overflow-y: auto;">
                                        ${response.distributorCevap}
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    <i class="fas fa-times me-2"></i>Kapat
                                </button>
                            </div>
                        `;

                        // Geçici modal oluştur
                        const tempModal = document.createElement('div');
                        tempModal.className = 'modal fade';
                        tempModal.innerHTML = `
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    ${modalContent}
                                </div>
                            </div>
                        `;

                        document.body.appendChild(tempModal);
                        const modal = new bootstrap.Modal(tempModal);
                        modal.show();

                        // Modal kapatıldığında DOM'dan kaldır
                        tempModal.addEventListener('hidden.bs.modal', function() {
                            document.body.removeChild(tempModal);
                        });
                    } else {
                        toastr.info('Bu bildirim için henüz cevap verilmemiş.');
                    }
                } catch (err) {
                    console.error('Hata:', err);
                    toastr.error('Cevap bilgileri alınamadı.');
                }
            });

            // Cevap kaydet butonu
            $('#cevapKaydetBtn').click(async function() {
                const $btn = $(this);
                const islem = $btn.data('islem');
                const bildirimId = $btn.data('bildirim-id');
                const cevap = $('#cevapMetni').val().trim();

                // Validasyon
                if (!cevap) {
                    toastr.warning('Lütfen cevap metnini giriniz.');
                    $('#cevapMetni').focus();
                    return;
                }

                if (cevap.length < 10) {
                    toastr.warning('Cevap metni en az 10 karakter olmalıdır.');
                    $('#cevapMetni').focus();
                    return;
                }

                // Butonu devre dışı bırak
                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Kaydediliyor...');

                try {
                    let url = '';
                    if (islem === 'yeni') {
                        url = '/AdminArgeHata/CevapVer';
                    } else {
                        url = '/AdminArgeHata/CevapGuncelle';
                    }

                    const response = await $.ajax({
                        url: url,
                        type: 'POST',
                        data: {
                            id: bildirimId,
                            aciklama: cevap
                        },
                        dataType: 'json'
                    });

                    if (response.success) {
                        // Modal'ı kapat
                        const cevapModal = bootstrap.Modal.getInstance(document.getElementById('cevapYazModal'));
                        cevapModal.hide();

                        // Satırı güncelle
                        const $row = $(`tr[data-bildirim-id="${bildirimId}"]`);
                        const kisaCevap = cevap.length > 50 ? cevap.substring(0, 50) + '...' : cevap;

                        // Cevap veren tipine göre badge belirle
                        const cevapVerenBadge = response.cevapVerenTip === 'Admin' ? 'badge-admin' : 'badge-bayi';

                        const cevapHtml = `
                            <div class="cevap-icerik" title="${cevap}">
                                ${kisaCevap}
                            </div>
                            <div class="cevap-veren">
                                <span class="badge ${cevapVerenBadge}">
                                    <i class="fas fa-user me-1"></i>${response.cevapVerenTip}
                                </span>
                                <small class="text-muted ms-2">
                                    <i class="fas fa-clock me-1"></i>
                                    ${response.cevapTarihi}
                                </small>
                            </div>
                            <div class="mt-1">
                                <button type="button"
                                        class="btn btn-sm btn-outline-warning cevap-duzenle"
                                        data-bildirim-id="${bildirimId}">
                                    <i class="fas fa-edit me-1"></i>Düzenle
                                </button>
                            </div>
                        `;

                        $row.find('.cevap-sutunu').html(cevapHtml);

                        // Durum hücresini güncelle
                        const durumHtml = `
                            <div>
                                <span class="badge ${cevapVerenBadge}">
                                    <i class="fas fa-check-circle me-1"></i>Cevap Verildi
                                </span>
                                <div class="mt-1">
                                    <button type="button"
                                            class="btn btn-sm btn-outline-info cevap-goruntule"
                                            data-bildirim-id="${bildirimId}"
                                            style="font-size: 0.7rem; padding: 2px 6px;">
                                        <i class="fas fa-eye me-1"></i>Görüntüle
                                    </button>
                                </div>
                            </div>
                        `;

                        $row.find('.durum-hucresi').html(durumHtml);

                        // Cevap verildi sınıfını ekle
                        $row.addClass('cevap-verildi');

                        toastr.success(response.message || 'Cevabınız başarıyla kaydedildi.');

                    } else {
                        toastr.error(response.message || 'Kayıt sırasında bir hata oluştu.');
                    }
                } catch (err) {
                    console.error('Hata:', err);
                    if (err.status === 401 || err.status === 403) {
                        toastr.error('Bu işlem için giriş yapmanız gerekmektedir.');
                    } else {
                        toastr.error('Sunucu ile bağlantı kurulamadı. Lütfen internet bağlantınızı kontrol edin.');
                    }
                } finally {
                    $btn.prop('disabled', false).html('<i class="fas fa-paper-plane me-2"></i>Gönder');
                }
            });

            // Cevap içeriğine tıklayınca tamamını göster
            $(document).on('click', '.cevap-icerik', async function() {
                const $cevapDiv = $(this);
                const $row = $cevapDiv.closest('tr');
                const bildirimId = $row.data('bildirim-id');

            });

            // Detay göster
            $(document).on('click', '.detay-goster', async function (e) {
                e.stopPropagation();
                const bildirimId = $(this).data('bildirim-id');

                try {
                    const detayModal = new bootstrap.Modal(document.getElementById('detayModal'));
                    detayModal.show();

                    $('#detayModalIcerik').html(
                        '<div class="text-center py-5">' +
                            '<div class="spinner-border text-primary" role="status"></div>' +
                            '<p class="mt-3">Bildirim detayları yükleniyor...</p>' +
                        '</div>'
                    );

                    const response = await $.ajax({
                        url: '/AdminArgeHata/DetayGetir',
                        type: 'GET',
                        data: { id: bildirimId },
                        dataType: 'json'
                    });

                    if (response.success) {
                        let cevapHtml = '';
                        if (response.distributorCevap) {
                            cevapHtml = `
                                <div class="col-12 mb-3">
                                    <div class="card border-success">
                                        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="fas fa-comment-dots me-2"></i>
                                                Cevap
                                            </div>
                                            <span class="badge ${response.cevapVerenTip === 'Admin' ? 'badge-admin' : 'badge-bayi'}">
                                                <i class="fas fa-user me-1"></i>${response.cevapVerenTip}
                                            </span>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-2">
                                                <strong>Cevap Veren:</strong> ${response.cevapVerenAdi || '-'}
                                            </div>
                                            <div class="mb-2">
                                                <strong>Cevap Tarihi:</strong> ${response.distributorCevapTarihi || '-'}
                                            </div>
                                            <div class="border rounded p-3 bg-light mb-2" style="white-space: pre-line;">
                                                ${response.distributorCevap}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            `;
                        }

                        let islemButonlari = '';
                        if (response.cevapDuzenleyebilir) {
                            islemButonlari += `<button type="button" class="btn btn-warning btn-sm cevap-duzenle-modal" data-bildirim-id="${response.id}"><i class="fas fa-edit me-1"></i>Cevap Düzenle</button>`;
                        }
                        if (response.durumDuzenleyebilir && !response.distributorCevap) {
                            islemButonlari += `<button type="button" class="btn btn-info btn-sm ms-2 durum-guncelle-modal" data-bildirim-id="${response.id}"><i class="fas fa-sync me-1"></i>Durum Güncelle</button>`;
                        }
                        if (response.silebilir) {
                            islemButonlari += `<button type="button" class="btn btn-danger btn-sm ms-2 sil-bildirim-modal" data-bildirim-id="${response.id}" data-adsoyad="${response.adi} ${response.soyadi}"><i class="fas fa-trash me-1"></i>Sil</button>`;
                        }

                        $('#detayModalIcerik').html(`
                            <div class="row g-3">
