                                                            <span class="badge @(cevapVerenTip == "Admin" ? "badge-admin" : "badge-bayi")">
                                                                <i class="fas fa-check-circle me-1"></i>Cevap Verildi
                                                            </span>
                                                            <div class="mt-1">
                                                                <button type="button"
                                                                        class="btn btn-sm btn-outline-info cevap-goruntule"
                                                                        data-bildirim-id="@bildirim.Id"
                                                                        style="font-size: 0.7rem; padding: 2px 6px;">
                                                                    <i class="fas fa-eye me-1"></i>Görüntüle
                                                                </button>
                                                            </div>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge @durumCss">@durumAdi</span>
                                                    }
                                                </td>

                                                <td>
                                                    <small class="text-muted">@bildirim.EklenmeTarihi.ToString("dd.MM.yy HH:mm")</small>
                                                </td>

                                                <td class="text-center">
                                                    <div class="btn-group btn-group-sm">
                                                        <button type="button"
                                                                class="btn btn-outline-primary btn-sm aksiyon-btn detay-goster"
                                                                data-bildirim-id="@bildirim.Id"
                                                                title="Detayları Gör">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                        @if (silebilir)
                                                        {
                                                            <button type="button"
                                                                    class="btn btn-outline-danger btn-sm aksiyon-btn sil-bildirim"
                                                                    data-bildirim-id="@bildirim.Id"
                                                                    data-adsoyad="@bildirim.Adi @bildirim.Soyadi"
                                                                    title="Sil">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="12" class="empty-state">
                                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                                <h5>Henüz bildirim bulunmuyor</h5>
                                                <p>Henüz bildirim eklenmemiş.</p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

