                                    <div class="card">
                                        <div class="card-header bg-warning text-dark">
                                            <i class="fas fa-file-alt me-2"></i>
                                            İçerik
                                        </div>
                                        <div class="card-body">
                                            <div class="border rounded p-3 bg-light" style="white-space: pre-line; min-height: 100px;">
                                                ${response.metni || '-'}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                ${cevapHtml}

                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-header bg-secondary text-white">
                                            <i class="fas fa-history me-2"></i>
                                            Zaman Bilgileri
                                        </div>
                                        <div class="card-body">
                                            <div class="row small g-2">
                                                <div class="col-12">
                                                    <label class="text-muted">Eklenme Tarihi:</label>
                                                    <div>${response.eklenmeTarihi}</div>
                                                </div>
                                                <div class="col-12">
                                                    <label class="text-muted">Son Güncelleme:</label>
                                                    <div>${response.guncellenmeTarihi}</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-header bg-dark text-white">
                                            <i class="fas fa-paperclip me-2"></i>
                                            Dosya
                                        </div>
                                        <div class="card-body">
                                            <div>${response.dosyaGorunum || '-'}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            ${islemButonlari ? `<div class="mt-3 text-center">${islemButonlari}</div>` : ''}
                        `);

                        // Modal içindeki butonlara event listener ekle
                        if (response.cevapDuzenleyebilir) {
                            $('.cevap-duzenle-modal').off('click').on('click', function() {
                                detayModal.hide();
                                const id = $(this).data('bildirim-id');
                                $(`tr[data-bildirim-id="${id}"] .cevap-duzenle`).click();
                            });
                        }

                        if (response.silebilir) {
                            $('.sil-bildirim-modal').off('click').on('click', function() {
                                detayModal.hide();
                                seciliBildirimId = $(this).data('bildirim-id');
                                $('#silinecekAdSoyad').text($(this).data('adsoyad'));
                                const silModal = new bootstrap.Modal(document.getElementById('silModal'));
                                silModal.show();
                            });
                        }
                    } else {
                        $('#detayModalIcerik').html(
                            '<div class="alert alert-danger">' +
                                '<i class="fas fa-exclamation-triangle me-2"></i>' +
                                (response.message || 'Detay bilgileri alınamadı.') +
                            '</div>'
                        );
                    }
                } catch (error) {
                    console.error('Hata:', error);
                    $('#detayModalIcerik').html(
                        '<div class="alert alert-danger">' +
                            '<i class="fas fa-exclamation-triangle me-2"></i>' +
                            'Bir hata oluştu: ' + (error.message || 'Sunucu ile bağlantı kurulamadı.') +
                        '</div>'
                    );
                }
            });

            // Satıra tıklayınca detay göster
            $(document).on('click', '#bildirimTablosu tr:not(:has(.empty-state))', function(e) {
                if ($(e.target).closest('button, a, select, .aksiyon-btn, .durum-select').length === 0) {
                    $(this).find('.detay-goster').first().click();
                }
            });

             $(document).on('click', '.sil-bildirim', function (e) {
            e.stopPropagation();
            seciliBildirimId = $(this).data('bildirim-id');
            $('#silinecekAdSoyad').text($(this).data('adsoyad'));
            const silModal = new bootstrap.Modal(document.getElementById('silModal'));
            silModal.show();
        });

        $('#silBtn').click(async function() {
            if (!seciliBildirimId) return;

            const $btn = $(this);
            $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Siliniyor...');

            try {
                const response = await $.ajax({
                    url: '/AdminArgeHata/Sil',
                    type: 'POST',
                    data: { Id: seciliBildirimId },
                    dataType: 'json'
                });

                if (response.success) {
                    // Modal'ı kapat
                    const silModal = bootstrap.Modal.getInstance(document.getElementById('silModal'));
                    silModal.hide();

                    // Satırı tablodan kaldır
                    $(`tr[data-bildirim-id="${seciliBildirimId}"]`).remove();

                    // Tablo boşsa boş durum mesajını göster
                    if ($('#bildirimTablosu tr:not(.empty-state)').length === 0) {
                        $('#bildirimTablosu').html(`
                            <tr>
                                <td colspan="12" class="empty-state">
                                    <i class="fas fa-inbox fa-2x mb-2"></i>
                                    <h5>Henüz bildirim bulunmuyor</h5>
                                    <p>Henüz bildirim eklenmemiş.</p>
                                </td>
                            </tr>
                        `);
                    }

                    toastr.success(response.message || 'Kayıt başarıyla silindi.');
                } else {
                    toastr.error(response.message || 'Silme işlemi başarısız oldu.');
                }
            } catch (error) {
                console.error('Hata:', error);
                if (error.status === 401) {
                    toastr.error('Bu işlem için yetkiniz bulunmamaktadır.');
                } else if (error.responseJSON && error.responseJSON.message) {
                    toastr.error(error.responseJSON.message);
                } else {
                    toastr.error('Silme işlemi sırasında bir hata oluştu.');
                }
            } finally {
                $btn.prop('disabled', false).html('<i class="fas fa-trash me-2"></i>Sil');
                seciliBildirimId = null;
            }
        });

        // Modal kapatıldığında seçili ID'yi sıfırla
        $('#silModal').on('hidden.bs.modal', function() {
            seciliBildirimId = null;
        });
        });
    </script>
}