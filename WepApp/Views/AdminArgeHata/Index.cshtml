                        // Yeni sınıfları belirle
                        const satirCssMap = {
                            1: 'satir-yeni',
                            2: 'satir-degerlendirmede',
                            3: 'satir-onaylandi',
                            4: 'satir-uygulandi',
                            5: 'satir-reddedildi',
                            6: 'satir-ertelendi',
                            7: 'satir-tamamlandi'
                        };

                        const durumCssMap = {
                            1: 'durum-yeni',
                            2: 'durum-degerlendirmede',
                            3: 'durum-onaylandi',
                            4: 'durum-uygulandi',
                            5: 'durum-reddedildi',
                            6: 'durum-ertelendi',
                            7: 'durum-tamamlandi'
                        };

