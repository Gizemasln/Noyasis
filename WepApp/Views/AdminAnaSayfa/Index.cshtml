@section Script {
    <script>
        let currentSlide = 0;
        let slideInterval;
        let slides = [];
        let dots = [];

        document.addEventListener('DOMContentLoaded', function() {
            slides = document.querySelectorAll('.slider-slide');
            dots = document.querySelectorAll('.slider-dot');

            const videos = document.querySelectorAll('.slider-video');
            videos.forEach(video => {
                video.play().catch(e => console.log('Video otomatik oynatılamadı:', e));
            });

            startAutoSlide();
        });

        function showSlide(index) {
            if (slides.length === 0) return;

            if (index >= slides.length) index = 0;
            if (index < 0) index = slides.length - 1;

            slides.forEach(slide => slide.classList.remove('active'));
            slides[index].classList.add('active');

            if (dots.length > 0) {
                dots.forEach(dot => dot.classList.remove('active'));
                dots[index].classList.add('active');
            }

            const activeSlide = slides[index];
            const video = activeSlide.querySelector('video');
            if (video) {
                video.play().catch(e => console.log('Video oynatılamadı:', e));
            }

            slides.forEach((slide, i) => {
                if (i !== index) {
                    const otherVideo = slide.querySelector('video');
                    if (otherVideo) {
                        otherVideo.pause();
                        otherVideo.currentTime = 0;
                    }
                }
            });

            currentSlide = index;
        }

        function changeSlide(direction) {
            stopAutoSlide();
            showSlide(currentSlide + direction);
            startAutoSlide();
        }

        function goToSlide(index) {
            stopAutoSlide();
            showSlide(index);
            startAutoSlide();
        }

        function startAutoSlide() {
            if (slides.length > 1) {
                stopAutoSlide();
                slideInterval = setInterval(() => {
                    changeSlide(1);
                }, 5000);
            }
        }

        function stopAutoSlide() {
            if (slideInterval) {
                clearInterval(slideInterval);
                slideInterval = null;
            }
        }

        const sliderContainer = document.getElementById('sliderContainer');
        if (sliderContainer) {
            sliderContainer.addEventListener('mouseenter', stopAutoSlide);
            sliderContainer.addEventListener('mouseleave', startAutoSlide);
        }

        function gorselGoster(imageUrl, title) {
            document.getElementById('modalGorsel').src = imageUrl;
            document.getElementById('modalGorselBaslik').textContent = title || 'Görsel';
            var modal = new bootstrap.Modal(document.getElementById('gorselModal'));
            modal.show();
        }

        function detayGoster(tur, id, baslik, metin, gorselYolu, eklenmeTarihi, durum, indirim, bitisTarihi) {
            let turAdi = '';
            let ekstraBilgi = '';

            switch(tur) {
                case 'bayi':
                    turAdi = 'Bayi Duyurusu';
                    break;
                case 'web':
                    turAdi = 'Web Duyurusu';
                    break;
                case 'kampanya':
                    turAdi = 'Kampanya';
                    ekstraBilgi = `<div class="mt-2"><span class="bilgi-etiketi"><i class="fas fa-percent me-1"></i>İndirim:</span> <span class="badge bg-success">%${indirim}</span></div>
                                   <div class="mt-2"><span class="bilgi-etiketi"><i class="fas fa-clock me-1"></i>Bitiş:</span> <span class="${new Date(bitisTarihi) < new Date() ? 'text-danger' : 'text-success'}">${bitisTarihi}</span></div>`;
                    break;
            }

            document.getElementById('detayModalBaslik').textContent = baslik;
            document.getElementById('detayModalBaslik2').textContent = baslik;
            document.getElementById('detayModalTur').textContent = turAdi;
            document.getElementById('detayModalTarih').textContent = eklenmeTarihi;
            document.getElementById('detayModalDurum').innerHTML = durum.includes('Yüksek') ? '<span class="badge bg-warning text-dark">' + durum + '</span>' : '<span class="badge bg-info">' + durum + '</span>';
            document.getElementById('detayModalMetin').innerHTML = metin ? metin.replace(/\n/g, '<br>') : '<em class="text-muted">İçerik bulunamadı.</em>';
            document.getElementById('detayModalEkstra').innerHTML = ekstraBilgi;

            const detayGorsel = document.getElementById('detayModalGorsel');
            if (gorselYolu) {
                detayGorsel.src = gorselYolu;
                detayGorsel.style.display = 'block';
            } else {
                detayGorsel.src = '/images/no-image.png';
                detayGorsel.style.display = 'block';
            }

            var modal = new bootstrap.Modal(document.getElementById('detayModal'));
            modal.show();
        }
    </script>
}