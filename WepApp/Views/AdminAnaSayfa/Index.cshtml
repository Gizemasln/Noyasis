<!-- Hero Slider -->
<div class="hero-slider">
    <div class="slider-container" id="sliderContainer">
        @if (ViewBag.SliderList != null && ((List<Slider>)ViewBag.SliderList).Count > 0)
        {
            var sliderList = (List<Slider>)ViewBag.SliderList;
            for (int i = 0; i < sliderList.Count; i++)
            {
                var slider = sliderList[i];
                <div class="slider-slide @(i == 0 ? "active" : "")" data-index="@i">
                    @if (!string.IsNullOrEmpty(slider.VideoYolu))
                    {
                        <div class="slider-video-container">
                            <video class="slider-video" autoplay muted loop playsinline>
                                <source src="@slider.VideoYolu" type="video/mp4">
                            </video>
                            <div class="video-overlay"></div>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(slider.GorselYolu))
                    {
                        <div class="slide-background" style="background-image: url('@slider.GorselYolu');"></div>
                    }

                    <div class="slide-content">
                        <h1 class="slide-title">@slider.SlaytBaslik</h1>
                        @if (!string.IsNullOrEmpty(slider.Aciklama))
                        {
                            <p class="slide-description">@slider.Aciklama</p>
                        }
                        @if (!string.IsNullOrEmpty(slider.SlaytUrl))
                        {
                            <a href="@slider.SlaytUrl" class="slide-button" target="@(slider.YeniSekmeMi == 1 ? "_blank" : "_self")">
                                @(string.IsNullOrEmpty(slider.SlaytButonAdi) ? "Detaylı Bilgi" : slider.SlaytButonAdi)
                                <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                        }
                    </div>
                </div>
            }

            @if (sliderList.Count > 1)
            {
                <div class="slider-arrow prev" onclick="changeSlide(-1)">
                    <i class="fas fa-chevron-left"></i>
                </div>
                <div class="slider-arrow next" onclick="changeSlide(1)">
                    <i class="fas fa-chevron-right"></i>
                </div>
                <div class="slider-controls">
                    @for (int i = 0; i < sliderList.Count; i++)
                    {
                        <div class="slider-dot @(i == 0 ? "active" : "")" onclick="goToSlide(@i)"></div>
                    }
                </div>
            }
        }
        else
        {
            <div class="slider-slide active">
                <div class="slide-background" style="background-image: url('/images/default-slider.jpg');"></div>
                <div class="slide-content">
                    <h1 class="slide-title">Hoş Geldiniz</h1>
                    <p class="slide-description">Firmamızın güncel duyuru ve kampanyalarını takip edebilirsiniz.</p>
                </div>
            </div>
        }
    </div>
</div>


