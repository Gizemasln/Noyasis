                <input type="hidden" id="editId" name="Id">
                <input type="hidden" id="editMevcutGorsel" name="MevcutGorsel">

                <div class="modal-header">
                    <h5 class="modal-title" id="duzenleModalLabel">
                        <i class="fas fa-edit me-2"></i>Duyuru Düzenle
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="editBaslik" name="Baslik" placeholder="Başlık" required>
                                <label for="editBaslik">Başlık <span class="text-danger">*</span></label>
